<div id="findRecord" class="flora" title="Find records">
	<% form_for :brecord, :html => {:id => 'find_records'} do |f| %>
		<fieldset>
			<legend id="legend_find_record"></legend>
			<div>
				<label for="rec_name">Name :</label>
				<%= f.text_field :find_rec_name, :maxlength => "26", :tabindex => "1" %>
			</div>
			<div>
				<label for="rec_cage_code">Bus.ID :</label>
				<%= f.text_field :find_rec_cage_code, :maxlength => "5", :tabindex => "2" %>
			</div>
			<div>
				<label for="rec_brecalt">Rev. :</label>
				<%= f.text_field :find_rec_brecalt, :maxlength => "4", :tabindex => "3" %>
			</div>
			<div>
				<label for="rec_breclevel">Status :</label>
				<%= f.text_field :find_rec_breclevel, :maxlength => "16", :tabindex => "4" %>
			</div>
			<div>
				<label for="rec_bproject">Project :</label>
				<%= f.text_field :find_rec_bproject, :maxlength => "16", :tabindex => "5" %>
			</div>
			<div>
				<label for="rec_bowner">Owner :</label>
				<%= f.text_field :find_rec_bowner, :maxlength => "16", :tabindex => "6" %>
			</div>
			<div>
				<label>&nbsp;</label>
				<%= submit_tag "Find", :id => "button1", :class => "button"%>
			</div>
		</fieldset>
	<% end %>
</div>

<script type="text/javascript"> 
	$(document).ready(function() { 
		$('ul.sf-menu').superfish({ 
			delay:       1000,                            // one second delay on mouseout 
			animation:   {opacity:'show',height:'show'},  // fade-in and slide-down animation 
			speed:       'fast',                          // faster animation speed 
			autoArrows:  false,                           // disable generation of arrow mark-up 
			dropShadows: false                            // disable drop shadows 
		}).find('ul').bgIframe({opacity:false});
		
		$('#dialogAbout').dialog({
			autoOpen: false,
			modal: true,
			overlay: {
				opacity: 0.5,
				background: "black"
			}
		});
		
		$('#findRecord').dialog({
			autoOpen: false,
			modal: true,
			overlay: {
				opacity: 0.5,
				background: "black"
			},
			height: 350,
			width: 380
		});
		
		$('#about').click(function() {
			$('#dialogAbout').dialog("open");
		});
		
		$('.find_rec').click(function() {
			var rectype = $(this).attr('title');
			var title = 'Find '+rectype.toUpperCase()
			$('#legend_find_record').html(title);
			$('#find_records').attr('action', '/rectype/'+rectype)
			$('#findRecord').dialog("open");
		});
	}); 
</script>